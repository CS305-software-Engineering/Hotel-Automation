  ============================-->
<!-- header section starts -->
<%- include('../partials/navbar') %>

   
<div class="content">
  <div class="loginlabel"> <h1>CHANGE PASSWORD</h1> </div>
  <div class="main"> 
    
      
       <form method = "POST" action = "/change_password">
        <h2 class="labels">Old Password</h2> 
        <input type = "password" class = "inputfield" placeholder = "Old Password" name = "oldPassword" required >
        <h2 class="labels">New Password</h2> 
        <input type = "password" class = "inputfield" placeholder = "New Password" name = "newPassword" required >
        <h2 class="labels">Confirm Password</h2> 
        <input type = "password" class = "inputfield" placeholder = "Confirm Password" name = "cPassword" required >
        <button type = "submit" class = "button" >Change Password</button>
      </form>  
     
      </div>
    </div> 
