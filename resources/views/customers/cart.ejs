<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display menu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/7140f4f7d5.js" crossorigin="anonymous"></script>
 <style>
     body { 
background-position: center; 
background-size: cover; 
font-family: san-serif;
}
 </style>
</head>
<body>
    <%- include('../partials/customer_navbar') %>

    <% if(session.cart) { %>
    <table class="container table table-hover" style="margin-top: 100px;font-size:x-large">
        <thead>
          <tr>
            <th scope="col">Item</th>
            <th scope="col">Price</th>
            <th scope="col">Hotel</th>
            <th scope="col">Quantity</th>
            <th scope="col">Total Price</th>
            <th scope="col">Action</th>

          </tr>
        </thead>
        <tbody>
            <% for(let item of Object.values(session.cart.items)) { %>
                <tr>
                   <th class="item" scope="row"><%= item.item.item %></th>
                    <td>Rs. <%= item.item.price %></td>
                    <td><%= item.item.hotelname %></td>
                    <td><%= item.qty %></td>
                    <td>â‚¹ <%= item.item.price * item.qty %></td>
                    <td>
                      <button class="btn btn-danger deleteCartButton" data-menuitem="<%= JSON.stringify(item.item) %>">
                        <i class="far fa-trash-alt"></i>&nbsp;Delete
                    </button>
                    <a class="btn btn-danger" href="/cart/delete/<%= item.item._id %>">
                      <i class="far fa-trash-alt"></i>&nbsp;Delete
                    </a>
                    </td>
                 </tr>
                <% } %>
        </tbody>
        <tfoot>
            <th scope="row" colspan="6">Total Amount :</th>
        </tfoot>
      </table>
        <hr>

        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total Amount:</span>
                <span class="amount text-2xl font-bold ml-2">â‚¹<%= session.cart.totalPrice %></span>
            </div>
            <div>
                <form action="/orders" method="POST" class="mt-12" id="payment-form">
                    <div class="relative w-1/2 ml-auto mb-4">
                        <select id="paymentType" name="paymentType" class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded leading-tight focus:outline-none focus:shadow-outline">
                          <option value="cod">Cash on delivery</option>
                          <option value="card">Pay with card</option>
                        </select>
                        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                          <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
                        </div>
                      </div>
                    <input name="instructions" class="border border-gray-400 p-2 w-1/2 mb-4" type="text"
                        placeholder="Any Special Instructions">
                    <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" type="text"
                        placeholder="Phone number">
                    <input name="address" class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address">
                    <div class="mt-4">
                        <div id="card-element"></div>
                        <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Order
                            Now</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% } else { %>
    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜•</h1>
            <p class="text-gray-500 text-lg mb-12">You probably haven't order anything yet. <br>
                To order, go to the main page.</p>
            <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go back</a>
        </div>
    </div>
    <% } %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js" integrity="sha512-lOrm9FgT1LKOJRUXF3tp6QaMorJftUjowOWiDcG5GFZ/q7ukof19V0HKx/GWzXCdt9zYju3/KhBNdCLzK8b90Q==" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.css" integrity="sha512-NXUhxhkDgZYOMjaIgd89zF2w51Mub53Ru3zCNp5LTlEzMbNNAjTjDbpURYGS5Mop2cU4b7re1nOIucsVlrx9fA==" crossorigin="anonymous" />
    <style>
      .noty_theme__mint {
        border-radius: 50px!important;
        padding-left: 8px!important;
      }
    </style>
  <script type="module">
    let addToCart = document.querySelectorAll('.add-to-cart')
    let deleteCartButton = document.querySelectorAll('.deleteCartButton')

    let cartCounter = document.querySelector('#cartCounter')
    function updateCart(menuitem){
      axios.post('/update-cart', menuitem).then(res => {
        console.log(res)
        cartCounter.innerText = res.data.totalQty
        new Noty({
          type: 'success',
          timeout: 1000,
          progressBar: false,
          text: "Item added to cart",
        }).show();
      }).catch(err => {
        new Noty({
          type: 'error',
          timeout: 1000,
          progressBar: false,
          text: "Something went wrong",
        }).show();
      })
    }
addToCart.forEach((btn) => {
  btn.addEventListener('click', (e) => {
      let menuitem = JSON.parse(btn.dataset.menuitem)
      updateCart(menuitem)
      //console.log(menuitem)
  })
})

function deleteCart(menuitem){
      axios.post('/delete-cart', menuitem).then(res => {
        console.log(res)
       /* cartCounter.innerText = res.data.totalQty;*/
        new Noty({
          type: 'success',
          timeout: 1000,
          progressBar: false,
          text: "Item added to cart",
        }).show();
      }).catch(err => {
        new Noty({
          type: 'error',
          timeout: 1000,
          progressBar: false,
          text: "Something went wrong",
        }).show();
      })
    }
    deleteCartButton.forEach((btn) => {
  btn.addEventListener('click', (e) => {
      let menuitemid = JSON.parse(btn.dataset.menuitem)
      deleteCart(menuitemid)
      //console.log(menuitem)
  })
})
  </script>
</body>
</html>

